<body>

    <div class="container">
        <div class="title">Bundle & Save</div>

        <div class="option" onclick="selectOption(this, 195, 1)">
            <input type="radio" name="bundle">
            <label>1 Pair - DKK 195.00 <span class="discount">50% OFF</span></label>
            <div class="content"></div>
        </div>

        <div class="option" onclick="selectOption(this, 345, 2)">
            <input type="radio" name="bundle">
            <label>2 Pairs - DKK 345.00 <span class="discount">40% OFF</span></label>
            <div class="content"></div>
        </div>

        <div class="option" onclick="selectOption(this, 528, 3)">
            <input type="radio" name="bundle">
            <label>3 Pairs - DKK 528.00 <span class="discount">60% OFF</span></label>
            <div class="content"></div>
        </div>

        <div class="free-shipping">Free 2 Day Shipping</div>
        <div class="summary">Total: DKK <span id="total">0</span></div>
        <button class="add-to-cart">+ Add to Cart</button>
    </div>

    <script>
        function selectOption(element, price, pairs) {
            let options = document.querySelectorAll('.option');
            options.forEach(opt => {
                opt.classList.remove('selected');
                opt.querySelector('.content').innerHTML = "";
                opt.querySelector('.content').style.display = 'none';
            });

            element.classList.add('selected');
            let contentDiv = element.querySelector('.content');
            contentDiv.innerHTML = generateDropdowns(pairs);
            contentDiv.style.display = 'block';
            document.getElementById('total').innerText = price;
        }

        function generateDropdowns(pairs) {
            let html = "";
            for (let i = 1; i <= pairs; i++) {
                html += `
                    <label>#${i} Size:</label>
                    <select>
                        <option>S</option>
                        <option>M</option>
                        <option>L</option>
                    </select>
                    <label>#${i} Color:</label>
                    <select>
                        <option>Red</option>
                        <option>Blue</option>
                        <option>Green</option>
                    </select>
                `;
            }
            return html;
        }
    </script>


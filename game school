<body>

  <h1>üê∞ Jeu de P√¢ques √©ducatif ü•ö</h1>
  <p>Clique sur un ≈ìuf pour r√©pondre √† une question ! Trouve l‚Äô≈ìuf magique !</p>

  <div id="eggs-container"></div>

  <div id="question" class="hidden"></div>
  <div id="answers" class="hidden"></div>
  <div id="result" style="font-weight:bold; font-size: 20px;"></div>

  <script>
    const eggsContainer = document.getElementById("eggs-container");
    const questionBox = document.getElementById("question");
    const answersBox = document.getElementById("answers");
    const resultBox = document.getElementById("result");

    const questions = [
      {
        question: "Quel animal pond les ≈ìufs ?",
        options: ["Le lapin", "La poule", "Le chat"],
        answer: "La poule"
      },
      {
        question: "Combien y a-t-il de jours dans une semaine ?",
        options: ["5", "7", "10"],
        answer: "7"
      },
      {
        question: "Quelle est la couleur du ciel quand il fait beau ?",
        options: ["Bleu", "Vert", "Rouge"],
        answer: "Bleu"
      }
    ];

    let magicEggIndex = Math.floor(Math.random() * 6);

    function createEggs() {
      for (let i = 0; i < 6; i++) {
        const egg = document.createElement("div");
        egg.className = "egg";
        egg.addEventListener("click", () => askQuestion(i));
        eggsContainer.appendChild(egg);
      }
    }

    function askQuestion(index) {
      const q = questions[Math.floor(Math.random() * questions.length)];
      questionBox.textContent = q.question;
      questionBox.classList.remove("hidden");
      answersBox.innerHTML = "";
      answersBox.classList.remove("hidden");

      q.options.forEach(opt => {
        const btn = document.createElement("button");
        btn.textContent = opt;
        btn.className = "btn";
        btn.onclick = () => {
          if (opt === q.answer) {
            if (index === magicEggIndex) {
              resultBox.textContent = "üéâ Bravo ! Tu as trouv√© l'≈ìuf magique !";
            } else {
              resultBox.textContent = "Bonne r√©ponse, mais ce n'√©tait pas l'≈ìuf magique. Essaie encore !";
            }
          } else {
            resultBox.textContent = "Oups ! Mauvaise r√©ponse, essaie encore.";
          }
        };
        answersBox.appendChild(btn);
      });
    }

    createEggs();
  </script>

  <script src="https://www.youtube.com/iframe_api"></script>
  <script>
    (function(){
      const minutesInput = document.getElementById('minutesInput');
      const secondsInput = document.getElementById('secondsInput');
      const audioSelect = document.getElementById('audioSelect');
      const startBtn = document.getElementById('startBtn');
      const stopBtn = document.getElementById('stopBtn');
      const timerDisplay = document.getElementById('timerDisplay');
      let timer = null;
      let timeLeftSec = 0;
      let isRunning = false;
      let player;
      let isPlayerReady = false;
      let currentVideoId = null;

      window.onYouTubeIframeAPIReady = function() {
        player = new YT.Player('player', {
          height: '195',
          width: '350',
          videoId: '',
          playerVars: { 'autoplay': 0, 'controls': 1, 'rel': 0, 'showinfo': 0, 'iv_load_policy': 3 },
          events: {
            'onReady': () => {
              isPlayerReady = true;
            },
            'onStateChange': onPlayerStateChange
          }
        });
      };

      function onPlayerStateChange(event) {
        // Add any state change logic if needed
      }

      function updateTimerDisplay(seconds) {
        const m = Math.floor(seconds / 60);
        const s = seconds % 60;
        timerDisplay.textContent = `${m.toString().padStart(2, '0')}:${s.toString().padStart(2,'0')}`;
      }

      function countDown() {
        if (timeLeftSec > 0) {
          timeLeftSec--;
          updateTimerDisplay(timeLeftSec);
        } else {
          clearInterval(timer);
          timer = null;
          isRunning = false;
          startBtn.disabled = false;
          stopBtn.disabled = true;
          stopBtn.textContent = 'Duraklat/Kapat';
          startBtn.setAttribute('aria-pressed', 'false');
          playSelectedVideo();
        }
      }

      function playSelectedVideo() {
        const selectedVideoId = audioSelect.value;
        if (isPlayerReady) {
          if (selectedVideoId === currentVideoId) {
            player.seekTo(0);
            player.playVideo();
          } else {
            currentVideoId = selectedVideoId;
            player.loadVideoById(currentVideoId);
          }
        }
      }

      function stopVideo() {
        if (player && isPlayerReady) {
          player.stopVideo();
        }
      }

      startBtn.addEventListener('click', () => {
        let min = parseInt(minutesInput.value, 10);
        let sec = parseInt(secondsInput.value, 10);
        if (isNaN(min) || min < 0) min = 0;
        if (isNaN(sec) || sec < 0) sec = 0;
        if (sec > 59) sec = 59;
        if (min > 59) min = 59;

        const total = min * 60 + sec;
        if (total <= 0) {
          alert('Lütfen geçerli bir süre girin (en az 1 saniye).');
          return;
        }

        timeLeftSec = total;
        updateTimerDisplay(timeLeftSec);

        startBtn.disabled = true;
        stopBtn.disabled = false;
        stopBtn.textContent = 'Duraklat/Kapat';
        startBtn.setAttribute('aria-pressed', 'true');

        stopVideo();

        if (timer) clearInterval(timer);
        timer = setInterval(countDown, 1000);
        isRunning = true;
      });

      stopBtn.addEventListener('click', () => {
        if (isRunning) {
          if (timer) {
            clearInterval(timer);
            timer = null;
          }
          isRunning = false;
          startBtn.disabled = false;
          stopBtn.disabled = true;
          stopBtn.textContent = 'Duraklat/Kapat';
          startBtn.setAttribute('aria-pressed', 'false');
        }
        stopVideo();
      });

      updateTimerDisplay(parseInt(secondsInput.value, 10) || 10);
    })();
  </script>
</body>

    <script>
        let cart = [];
        let mostOrdered = [];
        let products = [
            { id: "product1", name: "Dolo 650 (Paracetamol)", price: 50, img: "dolo650.jpg", orders: 12 },
            { id: "product2", name: "Amoxicillin (Amoxil, Biomox, Polymox)", price: 120, img: "amoxicillin.jpg", orders: 7 },
            { id: "product3", name: "Zincovit (Zinc & Vitamin C)", price: 80, img: "zincovit.jpg", orders: 5 },
            { id: "product4", name: "Ciprofloxacin (Cipro, Ciprolet)", price: 150, img: "cipro.jpg", orders: 6 },
            { id: "product5", name: "Ibuprofen (Brufen, Nurofen)", price: 180, img: "ibuprofen.jpg", orders: 4 },
            { id: "product6", name: "Azithromycin (Zithromax, AzaSite)", price: 200, img: "azithromycin.jpg", orders: 8 },
            { id: "product7", name: "Doxycycline (Doryx, Vibramycin)", price: 170, img: "doxycycline.jpg", orders: 6 },
            { id: "product8", name: "Metronidazole (Flagyl)", price: 140, img: "metronidazole.jpg", orders: 5 },
            { id: "product9", name: "Cetirizine (Zyrtec)", price: 100, img: "cetirizine.jpg", orders: 9 },
            { id: "product10", name: "Loratadine (Claritin)", price: 90, img: "loratadine.jpg", orders: 7 },
            { id: "product11", name: "Diphenhydramine (Benadryl)", price: 80, img: "diphenhydramine.jpg", orders: 6 },
            { id: "product12", name: "Pseudoephedrine (Sudafed)", price: 120, img: "pseudoephedrine.jpg", orders: 5 },
            { id: "product13", name: "Guaifenesin (Mucinex)", price: 110, img: "guaifenesin.jpg", orders: 6 },
            { id: "product14", name: "Famotidine (Pepcid)", price: 130, img: "famotidine.jpg", orders: 7 },
            { id: "product15", name: "Atorvastatin (Lipitor)", price: 250, img: "atorvastatin.jpg", orders: 10 }
        ];


        // Sort products by most ordered
        products.sort((a, b) => b.orders - a.orders);
        mostOrdered = products.slice(0, 5);

        function displayProducts(products) {
            const container = document.getElementById('product-container');
            container.innerHTML = '';
            products.forEach(product => {
                const productDiv = document.createElement('div');
                productDiv.classList.add('product');
                productDiv.innerHTML = `
                    <img src="${product.img}" alt="${product.name}">
                    <h3>${product.name}</h3>
                    <p>Price: ₹${product.price}</p>
                    <button onclick="addToCart('${product.name}', ${product.price}, '${product.id}')">Add to Cart</button>
                `;
                container.appendChild(productDiv);
            });
        }

        function displayMostOrdered() {
            const container = document.getElementById('most-ordered');
            container.innerHTML = '';
            mostOrdered.forEach(product => {
                const productDiv = document.createElement('div');
                productDiv.classList.add('product');
                productDiv.innerHTML = `
                    <img src="${product.img}" alt="${product.name}">
                    <h3>${product.name}</h3>
                    <p>Price: ₹${product.price}</p>
                `;
                container.appendChild(productDiv);
            });
        }

        function addToCart(productName, productPrice, productId) {
            cart.push({ name: productName, price: productPrice });
            updateCart();
            alert(`${productName} added to cart!`);
        }

        function removeFromCart(productName) {
            cart = cart.filter(item => item.name !== productName);
            updateCart();
        }

        function updateCart() {
            const cartList = document.getElementById('cart-summary-list');
            cartList.innerHTML = '';
            let total = 0;
            cart.forEach(item => {
                total += item.price;
                const itemDiv = document.createElement('li');
                itemDiv.classList.add('cart-item');
                itemDiv.innerHTML = `
                    <span>${item.name} - ₹${item.price}</span>
                    <button onclick="removeFromCart('${item.name}')">Remove</button>
                `;
                cartList.appendChild(itemDiv);
            });

            let discount = total * 0.1;
            let finalTotal = total - discount;

            document.getElementById('cart-total').innerText = total;
            document.getElementById('discount').innerText = discount;
            document.getElementById('final-total').innerText = finalTotal;
        }

        function navigateTo(sectionId) {
            document.querySelectorAll('section').forEach(section => section.style.display = 'none');
            document.getElementById(sectionId).style.display = 'block';
        }

        function proceedToPayment() {
            document.getElementById('payment-form').style.display = 'block';
        }

        function processPayment(event) {
            event.preventDefault();
            alert('Payment processed successfully!');
        }

        function editUserDetails() {
            // Edit user details functionality
            alert('Editing user details...');
        }

        function trackOrder(event) {
            event.preventDefault();
            const orderId = document.getElementById('order-id').value;
            // Simulate order tracking
            document.getElementById('order-status').style.display = 'block';
        }

        // Initialize
        displayProducts(products);
        displayMostOrdered();
    </script>

Database RAM Size:  32G RAM

alter system set compatible='12.2.0.1' scope=spfile; 
alter system set filesystemio_options=setall scope=spfile;
alter system reset memory_target scope=spfile;
alter system reset memory_max_target scope=spfile;
alter system set sga_target=20000m scope=spfile;
alter system set pga_aggregate_target=4000m scope=spfile;
alter system set shared_pool_size=4000m scope=spfile;
alter system set inmemory_size=1000m scope=spfile;
alter system set pga_aggregate_limit=10000m scope=spfile;


/opt/CA/AccessControl/bin/sesu - root

sudo vi /etc/sysctl.conf
vm.nr_hugepages = 10100 <- we set, requires server bounce to take effect. 

-- After DB bounce.... 
-- Set a table to use the inmemory store to trigger usage for the ULA.
alter table odba.odba_db_size_hist inmemory;



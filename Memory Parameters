
Database RAM Size: 140 GB RAM

alter system reset memory_target scope=spfile;
alter system reset memory_max_target scope=spfile;
alter system reset sga_max_size scope=spfile;
alter system set filesystemio_options=setall scope=spfile;
alter system set sga_target=90000m scope=spfile;
alter system set pga_aggregate_target=20000m scope=spfile;
alter system set pga_aggregate_limit=50000m scope=spfile;
alter system set shared_pool_size=4000m scope=spfile;
alter system set streams_pool_size=512m scope=spfile;
alter system set inmemory_size=1000m scope=spfile;

/etc/sysctl.conf:
vm.nr_hugepages = 20100 



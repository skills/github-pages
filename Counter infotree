      display: flex;
      gap: 20px;
    }

    .contador {
      position: relative;
      text-align: center;
      width: 120px;
      height: 120px;
    }

    .time-display {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      font-size: 20px;
      font-weight: bold;
    }

    .label {
      margin-top: 10px;
      font-size: 14px;
      color: #555;
    }

    svg {
      transform: rotate(-90deg); /* Gira el c√≠rculo para que empiece desde arriba */
    }

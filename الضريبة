<body>

  <div class="container">
    <img src="logo.png" alt="شعار الوزارة" style="width: 120px; margin-bottom: 20px;">


    <h2>حساب الضريبة من المبلغ الإجمالي</h2>
    <label>قيمة الفاتورة (شاملة الضريبة 5%):</label>
    <input type="number" id="totalWithVAT" placeholder="أدخل المبلغ الإجمالي">
    <button onclick="calculateOriginalAmount()">احسب</button>

    <div class="result" id="output"></div>
  </div>

  <script>
    function calculateOriginalAmount() {
      let total = parseFloat(document.getElementById("totalWithVAT").value);
      if (isNaN(total) || total <= 0) {
        document.getElementById("output").innerText = "يرجى إدخال قيمة صحيحة.";
        return;
      }

      let amountWithoutVAT = total / 1.05;
      let vat = total - amountWithoutVAT;

      document.getElementById("output").innerHTML = `
        <p>قيمة الفاتورة بدون الضريبة: ${amountWithoutVAT.toFixed(3)} ريال</p>
        <p>قيمة الضريبة (5%): ${vat.toFixed(3)} ريال</p>
      `;
    }
  </script>

</body>

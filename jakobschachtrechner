      background-color: #1b263b;
      border: 2px solid #f1c40f;
      border-radius: 10px;
      padding: 20px;
      margin: 30px auto;
      max-width: 500px;
    }

    label {
      display: block;
      margin-top: 10px;
    }

    input[type="number"] {
      width: 100%;
      padding: 8px;
      margin-top: 5px;
      border: 1px solid #f1c40f;
      border-radius: 5px;
      background-color: #415a77;
      color: #f1c40f;
    }

    button {
      margin-top: 15px;
      padding: 10px 15px;
      background-color: #f1c40f;
      color: #0d1b2a;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    button:hover {
      background-color: #e1b70d;
    }

    .result {
      margin-top: 15px;
      font-weight: bold;
    }

<body>
  <h1>FutbolProb ⚽</h1>
  <p>Bugünün maçları ve kazanma olasılıkları:</p>

  <div id="matches">Yükleniyor...</div>

  <script>
    const apiKey = "BURAYA_API_KEY_YAPIŞTIR";  // ← Buraya kendi API key'ini koy

    async function getMatches() {
      const response = await fetch("https://v3.football.api-sports.io/fixtures?date=2025-05-19", {
        method: "GET",
        headers: {
          "x-apisports-key": apiKey
        }
      });

      const data = await response.json();
      const matchesDiv = document.getElementById("matches");
      matchesDiv.innerHTML = "";

      data.response.forEach(match => {
        const home = match.teams.home.name;
        const away = match.teams.away.name;
        const league = match.league.name;

        const matchDiv = document.createElement("div");
        matchDiv.className = "match";
        matchDiv.innerHTML = `<strong>${league}</strong><br>${home} vs ${away}`;
        matchesDiv.appendChild(matchDiv);
      });
    }

    getMatches();
  </script>
</body>

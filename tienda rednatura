  // Puedes continuar agregando el resto aquí si deseas más adelante
];

export default function TiendaRedNatura() {
  const [carrito, setCarrito] = useState([]);

  const agregarAlCarrito = (producto) => {
    setCarrito([...carrito, producto]);
  };

  const total = carrito.reduce((acc, prod) => acc + prod.precio, 0);

  return (
    <div className="p-4 bg-gray-50 min-h-screen">
      <h1 className="text-3xl font-bold text-green-700 mb-6">Tienda RedNatura</h1>

      <div className="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
        {productos.map((producto) => (
          <Card key={producto.id} className="bg-white shadow-lg">
            <img
              src={producto.imagen}
              alt={producto.nombre}
              className="w-full h-48 object-cover"
            />
            <CardContent className="p-4">
              <h2 className="text-xl font-semibold text-green-800">
                {producto.nombre}
              </h2>
              <p className="text-sm text-gray-600 mb-2">
                {producto.descripcion}
              </p>
              <p className="text-lg font-bold text-green-700 mb-4">
                ${producto.precio}
              </p>
              <Button onClick={() => agregarAlCarrito(producto)} className="bg-green-600 hover:bg-green-700">
                Añadir al carrito
              </Button>
            </CardContent>
          </Card>
        ))}
      </div>

      <div className="mt-10 p-4 bg-white rounded-xl shadow-md">
        <h2 className="text-2xl font-bold text-green-700 mb-4">Carrito de compras</h2>
        {carrito.length === 0 ? (
          <p className="text-gray-500">Tu carrito está vacío.</p>
        ) : (
          <ul className="mb-4">
            {carrito.map((item, index) => (
              <li key={index} className="text-gray-700">
                {item.nombre} - ${item.precio}
              </li>
            ))}
          </ul>
        )}
        <p className="text-lg font-semibold text-green-800">
          Total: ${total.toFixed(2)}
        </p>
        <Button className="mt-2 bg-green-700 hover:bg-green-800">
          Proceder al pago
        </Button>
      </div>
    </div>
  );
}

    <script>
        function getReward() {
            let rewards = ["🐾 可爱贴纸", "🍬 甜甜糖果", "🐶 小狗抱抱", "🎀 漂亮蝴蝶结"];
            let randomReward = rewards[Math.floor(Math.random() * rewards.length)];
            let rewardBox = document.getElementById("rewardBox");
            rewardBox.innerText = "恭喜获得：" + randomReward + "！";
            rewardBox.style.display = "block";
        }
    </script>


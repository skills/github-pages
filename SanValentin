    <script>
        function checkPassword() {
            let password = document.getElementById("passwordInput").value;
            if (password === "210125") {
                document.getElementById("content").style.display = "block";
                document.getElementById("passwordPrompt").style.display = "none";
            } else {
                alert("Contrase√±a incorrecta, int√©ntalo de nuevo.");
            }
        }
        
        function showPoem() {
            document.getElementById("poem").style.display = "block";
            document.getElementById("valentine").style.display = "none";
            document.getElementById("response").innerHTML = "";
        }
        
        function showValentine() {
            document.getElementById("valentine").style.display = "block";
            document.getElementById("poem").style.display = "none";
            document.getElementById("response").innerHTML = "";
        }
        
        function showResponse(message) {
            document.getElementById("response").innerHTML = message;
        }

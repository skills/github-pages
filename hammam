/* General Styles */
body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    text-align: center;
}

h1 {
    font-size: 2em;
    margin: 20px 0;
}

.container {
    width: 90%;
    margin: 0 auto;
}

.box {
    border: 1px solid black;
    background-color: #f4f4f4;
    padding: 20px;
    position: relative;
}

/* Section Title Styling */
.title {
    position: absolute;
    top: 0;
    right: 0;
    background-color: #ff5733;
    color: white;
    padding: 5px 10px;
    font-weight: bold;
    border: 1px solid black;
}

/* Desktop View (≥ 992px) */
@media (min-width: 992px) {
    .box {
        float: left;
        width: 32%;
        margin: 1%;
    }
}

/* Tablet View (768px - 991px) */
@media (min-width: 768px) and (max-width: 991px) {
    .box {
        width: 48%;
        float: left;
        margin: 1%;
    }
    .box:nth-child(3) {
        width: 98%;
    }
}

/* Mobile View (≤ 767px) */
@media (max-width: 767px) {
    .box {
        width: 100%;
        margin-bottom: 10px;
    }
}

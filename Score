<body>

    <div class="container">
        <h1>إدارة النقاط للاعبين</h1>
        
        <div class="player">
            <label for="player1-name">اسم اللاعب 1:</label>
            <input type="text" id="player1-name" value="اللاعب 1">
            <p id="player1-name-display">اللاعب 1: <span id="player1-score">0</span></p>
            <div class="buttons">
                <button onclick="adjustPoints('player1', 1)">زيادة 1 نقطة</button>
                <button onclick="adjustPoints('player1', -1)">نقصان 1 نقطة</button>
                <button onclick="adjustPoints('player1', 3)">زيادة 3 نقاط</button>
                <button onclick="adjustPoints('player1', -3)">نقصان 3 نقاط</button>
            </div>
        </div>

        <div class="player">
            <label for="player2-name">اسم اللاعب 2:</label>
            <input type="text" id="player2-name" value="اللاعب 2">
            <p id="player2-name-display">اللاعب 2: <span id="player2-score">0</span></p>
            <div class="buttons">
                <button onclick="adjustPoints('player2', 1)">زيادة 1 نقطة</button>
                <button onclick="adjustPoints('player2', -1)">نقصان 1 نقطة</button>
                <button onclick="adjustPoints('player2', 3)">زيادة 3 نقاط</button>
                <button onclick="adjustPoints('player2', -3)">نقصان 3 نقاط</button>
            </div>
        </div>
    </div>

    <script>
        // تعديل النقاط
        function adjustPoints(player, points) {
            let playerScore = document.getElementById(player + '-score');
            let currentScore = parseInt(playerScore.textContent);
            currentScore += points;
            playerScore.textContent = currentScore;
        }

        // تحديث اسم اللاعب
        document.getElementById('player1-name').addEventListener('input', function() {
            let player1Name = document.getElementById('player1-name').value;
            document.getElementById('player1-name-display').innerHTML = player1Name + ': <span id="player1-score">0</span>';
        });

        document.getElementById('player2-name').addEventListener('input', function() {
            let player2Name = document.getElementById('player2-name').value;
            document.getElementById('player2-name-display').innerHTML = player2Name + ': <span id="player2-score">0</span>';
        });
    </script>

</body>

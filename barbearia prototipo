    <!-- Booking Modal -->
    <div id="booking-modal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 hidden">
        <div class="bg-white rounded-lg p-8 max-w-md w-full mx-4">
            <div class="text-center mb-6">
                <i class="fas fa-check-circle text-5xl text-green-500 mb-4"></i>
                <h3 class="text-2xl font-bold text-stone-800 mb-2">Agendamento Confirmado!</h3>
                <p id="booking-success-message" class="text-stone-600">Seu horário foi reservado com sucesso.</p>
            </div>
            <div class="bg-stone-100 p-4 rounded-lg mb-6">
                <p id="modal-service" class="font-bold text-stone-800"></p>
                <p id="modal-barber"></p>
                <p id="modal-date"></p>
                <p id="modal-time" class="font-bold text-amber-600"></p>
            </div>
            <button id="close-modal" class="w-full bg-stone-800 hover:bg-stone-700 text-white font-bold py-3 px-6 rounded-lg transition duration-300">Fechar</button>
        </div>
    </div>

    <script>
        // Mobile menu toggle
        document.getElementById('menu-toggle').addEventListener('click', function() {
            const menu = document.getElementById('mobile-menu');
            menu.classList.toggle('hidden');
        });

        // Generate time slots for booking
        function generateTimeSlots() {
            const timeSlotsContainer = document.getElementById('time-slots');
            timeSlotsContainer.innerHTML = '';
            
            // Generate time slots from 9AM to 7PM with 30 minute intervals
            for (let hour = 9; hour <= 19; hour++) {
                for (let minute = 0; minute < 60; minute += 30) {
                    if (hour === 19 && minute === 30) break; // Stop at 7PM
                    
                    const timeString = `${hour.toString().padStart(2, '0')}:${minute.toString().padStart(2, '0')}`;
                    const timeButton = document.createElement('button');
                    timeButton.className = 'bg-stone-700 hover:bg-amber-500 text-white py-2 px-3 rounded transition';
                    timeButton.textContent = timeString;
                    
                    timeButton.addEventListener('click', function() {
                        // Remove active class from all buttons
                        document.querySelectorAll('#time-slots button').forEach(btn => {
                            btn.classList.remove('bg-amber-500');
                            btn.classList.add('bg-stone-700');
                        });
                        
                        // Add active class to clicked button
                        this.classList.remove('bg-stone-700');
                        this.classList.add('bg-amber-500');
                        
                        // Show booking details
                        const service = document.getElementById('full-service').value;
                        const barber = document.getElementById('full-barber').value;
                        const date = document.getElementById('booking-date').value;
                        
                        document.getElementById('detail-service').textContent = 'Serviço: ' + document.getElementById('full-service').options[document.getElementById('full-service').selectedIndex].text;
                        document.getElementById('detail-barber').textContent = 'Barbeiro: ' + (barber ? document.getElementById('full-barber').options[document.getElementById('full-barber').selectedIndex].text : 'Qualquer barbeiro disponível');
                        document.getElementById('detail-date').textContent = 'Data: ' + new Date(date).toLocaleDateString('pt-BR');
                        document.getElementById('detail-time').textContent = 'Horário: ' + timeString;
                        
                        document.getElementById('booking-details').classList.remove('hidden');
                    });
                    
                    timeSlotsContainer.appendChild(timeButton);
                }
            }
            
            timeSlotsContainer.classList.remove('hidden');
        }

        // Check availability button
        document.getElementById('check-availability').addEventListener('click', function() {
            const date = document.getElementById('booking-date').value;
            const service = document.getElementById('full-service').value;
            
            if (!date) {
                alert('Por favor, selecione uma data');
                return;
            }
            
            if (!service) {
                alert('Por favor, selecione um serviço');
                return;
            }
            
            generateTimeSlots();
        });

        // Confirm booking button
        document.getElementById('confirm-booking').addEventListener('click', function() {
            const name = document.getElementById('client-name').value;
            const phone = document.getElementById('client-phone').value;
            
            if (!name || !phone) {
                alert('Por favor, preencha seu nome e telefone');
                return;
            }
            
            // Show success modal
            document.getElementById('modal-service').textContent = document.getElementById('detail-service').textContent;
            document.getElementById('modal-barber').textContent = document.getElementById('detail-barber').textContent;
            document.getElementById('modal-date').textContent = document.getElementById('detail-date').textContent;
            document.getElementById('modal-time').textContent = document.getElementById('detail-time').textContent;
            
            document.getElementById('booking-modal').classList.remove('hidden');
        });

        // Close modal button
        document.getElementById('close-modal').addEventListener('click', function() {
            document.getElementById('booking-modal').classList.add('hidden');
            
            // Reset form
            document.getElementById('booking-form').reset();
            document.getElementById('time-slots').classList.add('hidden');
            document.getElementById('booking-details').classList.add('hidden');
            document.getElementById('client-name').value = '';
            document.getElementById('client-phone').value = '';
        });

        // Initialize calendar (conceptual - in a real app you would use a library like FullCalendar)
        document.addEventListener('DOMContentLoaded', function() {
            const today = new Date();
            const calendarEl = document.getElementById('calendar');
            
            // This is just a visual representation - a real calendar would be more complex
            calendarEl.innerHTML = `
                <div class="text-center mb-4 font-bold">${today.toLocaleString('pt-BR', { month: 'long', year: 'numeric' })}</div>
                <div class="grid grid-cols-7 gap-1 text-center">
                    <div class="font-bold text-sm py-2">Dom</div>
                    <div class="font-bold text-sm py-2">Seg</div>
                    <div class="font-bold text-sm py-2">Ter</div>
                    <div class="font-bold text-sm py-2">Qua</div>
                    <div class="font-bold text-sm py-2">Qui</div>
                    <div class="font-bold text-sm py-2">Sex</div>
                    <div class="font-bold text-sm py-2">Sáb</div>
                    
                    ${Array.from({ length: 35 }, (_, i) => {
                        const date = new Date(today);
                        date.setDate(1);
                        date.setDate(date.getDate() - date.getDay() + i);
                        
                        const isCurrentMonth = date.getMonth() === today.getMonth();
                        const isToday = date.toDateString() === new Date().toDateString();
                        const isAvailable = date.getDay() !== 0 && date >= new Date();
                        
                        return `
                            <div class="py-2 text-sm 
                                ${isCurrentMonth ? 'text-stone-300' : 'text-stone-500'} 
                                ${isToday ? 'bg-amber-500 text-white rounded-full' : ''}
                                ${isAvailable ? 'cursor-pointer hover:bg-stone-700' : ''}"
                                onclick="${isAvailable ? `document.getElementById('booking-date').valueAsDate = new Date('${date.toISOString()}')` : ''}">
                                ${date.getDate()}
                            </div>
                        `;
                    }).join('')}
                </div>
            `;
        });
    </script>
</body>
</html>

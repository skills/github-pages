<body>
    <div class="container">
        <h1>Fun Facts App Info</h1>
        <p id="funFact">Click the button to generate a fun fact!</p>
        <button onclick="displayFact()">Generate Another Fun Fact</button>
    </div>

    <script>
        const facts = [
            "A group of flamingos is called a 'flamboyance'.",
            "Sloths can hold their breath longer than dolphins can.",
            "Sharks existed before trees.",
            "The Eiffel Tower can grow more than 6 inches during the summer.",
            "Some cats are allergic to humans!"
        ];

        function displayFact() {
            const randomIndex = Math.floor(Math.random() * facts.length);
            document.getElementById("funFact").textContent = facts[randomIndex];
        }
    </script>
</body>

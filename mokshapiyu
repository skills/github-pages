<body>
  <h1>Fun Facts About Animals</h1>
  <div id="fact-display">Click the button to see a fun fact!</div>
  <button onclick="generateFact()">Generate Another Fun Fact</button>
  <script>
    const facts = [
      "A group of flamingos is called a 'flamboyance.'",
      "Elephants are the only mammals that can't jump.",
      "A snail can sleep for up to three years at a time.",
      "Dolphins have names for each other and can call out to one another.",
      "The fingerprints of a koala are so similar to humans that they can taint crime scenes.",
      "Octopuses have three hearts and blue blood.",
      "Cows have best friends and can become stressed when separated.",
      "A group of owls is called a 'parliament.'",
      "Frogs can freeze without dying and thaw out later.",
      "The heart of a shrimp is located in its head.",
      "Sloths only poop once a week, and it’s a dangerous journey for them!",
      "Butterflies taste with their feet.",
      "Penguins propose to their mates with a pebble.",
      "Wombat poop is cube-shaped.",
      "Some turtles can breathe through their butts.",
      "Male seahorses are the ones that get pregnant and give birth.",
      "Giraffes have the same number of neck vertebrae as humans—seven!",
      "Crocodiles cannot stick their tongues out.",
      "Honeybees can recognize human faces.",
      "Axolotls can regrow lost limbs, including parts of their heart and brain."
    ];

    function generateFact() {
      const randomIndex = Math.floor(Math.random() * facts.length);
      document.getElementById('fact-display').textContent = facts[randomIndex];
    }

    // Show a fact on page load
    window.onload = generateFact;
  </script>
</body>

<body>

<nav>
  <button onclick="switchTab('zugfuehrer')" class="active">Zugf√ºhrer</button>
  <button onclick="switchTab('tf')">Triebfahrzeugf√ºhrer</button>
</nav>

<section id="zugfuehrer" class="active">
  <h2>Zugf√ºhrer ‚Äì Zp9 senden</h2>
  <div class="swipe-button" onclick="sendZp9()">Zp9 senden</div>
  <br>
  <div class="swipe-button" style="background-color: #c62828;" onclick="resetSignal()">Zur√ºcksetzen</div>
</section>

<section id="tf">
  <h2>Triebfahrzeugf√ºhrer ‚Äì Zp9 Anzeige</h2>
  <div class="circle" id="signalCircle"></div>
</section>

<script src="https://www.gstatic.com/firebasejs/9.6.1/firebase-app-compat.js"></script>
<script src="https://www.gstatic.com/firebasejs/9.6.1/firebase-database-compat.js"></script>
<script>
  // üëâ Firebase Config (ersetzen mit deinen echten Werten!)
  const firebaseConfig = {
    apiKey: "DEINE_API_KEY",
    authDomain: "DEIN_PROJEKT.firebaseapp.com",
    databaseURL: "https://DEIN_PROJEKT.firebaseio.com",
    projectId: "DEIN_PROJEKT",
    storageBucket: "DEIN_PROJEKT.appspot.com",
    messagingSenderId: "DEINE_ID",
    appId: "DEINE_APP_ID"
  };

  firebase.initializeApp(firebaseConfig);
  const db = firebase.database();

  function switchTab(tab) {
    document.querySelectorAll('nav button').forEach(btn => btn.classList.remove('active'));
    document.querySelectorAll('section').forEach(sec => sec.classList.remove('active'));
    document.querySelector(`nav button[onclick*="${tab}"]`).classList.add('active');
    document.getElementById(tab).classList.add('active');
  }

  function sendZp9() {
    db.ref("signal").set({ zp9: true });
  }

  function resetSignal() {
    db.ref("signal").set({ zp9: false });
  }

  // Zeichne Punkte im Kreis
  const circle = document.getElementById("signalCircle");
  const dotCount = 20;
  const radius = 100;
  const centerX = 125;
  const centerY = 125;
  const dots = [];

  for (let i = 0; i < dotCount; i++) {
    const angle = (i / dotCount) * 2 * Math.PI;
    const x = centerX + radius * Math.cos(angle) - 10;
    const y = centerY + radius * Math.sin(angle) - 10;
    const dot = document.createElement("div");
    dot.classList.add("dot");
    dot.style.left = `${x}px`;
    dot.style.top = `${y}px`;
    circle.appendChild(dot);
    dots.push(dot);
  }

  // Echtzeit-Signal√ºberwachung
  db.ref("signal").on("value", (snapshot) => {
    const data = snapshot.val();
    const active = data && data.zp9;
    dots.forEach(dot => {
      if (active) {
        dot.classList.add("active");
      } else {
        dot.classList.remove("active");
      }
    });
  });
</script>
</body>

      display: flex;
      background-color: #222;
    }

    nav button {
      flex: 1;
      padding: 1rem;
      background: none;
      border: none;
      color: white;
      font-size: 1.2rem;
      cursor: pointer;
    }

    nav button.active {
      background-color: #444;
    }

    section {
      display: none;
      padding: 2rem;
    }

    section.active {
      display: block;
    }

    .swipe-button {
      width: 100%;
      max-width: 300px;
      height: 60px;
      border-radius: 30px;
      background-color: #00c853;
      color: white;
      font-size: 1.5rem;
      font-weight: bold;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      user-select: none;
      transition: background-color 0.3s;
    }

    .swipe-button:active {
      background-color: #00e676;
    }


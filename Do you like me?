<body>

    <h1>Ganahan ka nako?</h1>
    <div class="button-container">
        <button id="yes" onclick="yesClicked()">OO</button>
        <button id="no" onclick="noClicked()">DILI</button>
    </div>
    <p id="message"></p>
    <img id="cat-photo" src="" alt="Random Cat Photo">

    <script>
        let yesButton = document.getElementById("yes");
        let noButton = document.getElementById("no");
        let message = document.getElementById("message");
        let catPhoto = document.getElementById("cat-photo");
        let yesSize = 16;

        const flirtLines = [
            "Wala ko nagpaasa, pero murag ikaw gyud akong gusto.",
            "Kung wala ka, murag way lami ang adlaw nako.",
            "Di ko kabalo mo flirt, pero ganahan gyud ko nimo.",
            "Unsaon nako pag-ignore nimo kung permi man ka sa akong huna-huna?",
            "CLICK OO!!"
        ];

        function noClicked() {
            let randomFlirt = flirtLines[Math.floor(Math.random() * flirtLines.length)];
            message.innerText = randomFlirt;
            yesSize += 10;
            yesButton.style.fontSize = yesSize + "px";
            yesButton.style.padding = (yesSize / 2) + "px " + yesSize + "px";
        }

        function yesClicked() {
            message.innerText = "Kabalo ko! ❤️";
            yesButton.style.fontSize = "16px";
            yesButton.style.padding = "10px 20px";
            noButton.remove();
            catPhoto.src = "https://cataas.com/cat"; // Random cat API
            catPhoto.style.display = "block"; // Show the image
        }
    </script>

</body>
</html>

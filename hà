        // Render places
        const grid = document.querySelector('.places-grid');
        placesData.forEach(place => {
            grid.innerHTML += `
                <div class="place-card" onclick="openModal(${place.id})">
                    <img class="card-image" src="${place.image}" alt="${place.name}">
                    <div class="card-title">${place.name}</div>
                </div>
            `;
        });

        // Create modals
        placesData.forEach(place => {
            document.body.innerHTML += `
                <div class="modal" id="modal-${place.id}">
                    <div class="modal-content">
                        <span class="close-btn" onclick="closeModal()">&times;</span>
                        <h2>${place.name}</h2>
                        <div class="modal-body">
                            <div class="modal-info">
                                <p>${place.description}</p>
                                <h3>ƒê·∫∑c ƒëi·ªÉm n·ªïi b·∫≠t</h3>
                                <ul>${place.highlights.map(h => `<li>${h}</li>`).join('')}</ul>
                                <h3>V·ªã tr√≠</h3>
                                <p>üìç ${place.location}</p>
                            </div>
                            <div>
                                <h3>B·∫£n ƒë·ªì</h3>
                                <iframe 
                                    src="${place.map}"
                                    width="100%" 
                                    height="300" 
                                    style="border:0;"
                                    loading="lazy">
                                </iframe>
                            </div>
                        </div>
                    </div>
                </div>
            `;
        });

        function openModal(id) {
            document.getElementById(`modal-${id}`).style.display = "block";
        }

        function closeModal() {
            document.querySelectorAll('.modal').forEach(modal => {
                modal.style.display = "none";
            });
        }

        function toggleTheme() {
            const body = document.body;
            const currentTheme = body.getAttribute('data-theme');
            
            if(currentTheme === 'dark') {
                body.removeAttribute('data-theme');
                localStorage.setItem('theme', 'light');
            } else {
                body.setAttribute('data-theme', 'dark');
                localStorage.setItem('theme', 'dark');
            }
        }

        // ƒê√≥ng modal khi click b√™n ngo√†i
        window.onclick = function(event) {
            if (event.target.classList.contains('modal')) {
                closeModal();
            }
        }

        // Load theme khi kh·ªüi ƒë·ªông
        window.onload = function() {
            const savedTheme = localStorage.getItem('theme') || 'light';
            if(savedTheme === 'dark') {
                document.body.setAttribute('data-theme', 'dark');
            }
        }
    </script>
</body>

    <script>
    document.addEventListener('DOMContentLoaded', function() {
        // Check for speech support
        const speechSupport = {
            synthesis: 'speechSynthesis' in window,
            recognition: 'webkitSpeechRecognition' in window || 'SpeechRecognition' in window
        };
        
        // DOM elements
        const aiInput = document.getElementById('ai-input');
        const sendBtn = document.getElementById('send-btn');
        const voiceBtn = document.getElementById('voice-btn');
        const readAloudBtn = document.getElementById('read-aloud-btn');
        const chatContainer = document.getElementById('chat-container');
        const typingIndicator = document.getElementById('typing-indicator');
        const quickActions = document.querySelectorAll('.quick-action');
        
        // Speech synthesis setup
        const synth = window.speechSynthesis;
        let voices = [];
        let currentUtterance = null;
        
        // Load voices
        function loadVoices() {
            voices = synth.getVoices();
            // Prefer a natural-sounding voice
            const preferredVoices = voices.filter(voice => 
                voice.name.includes('Natural') || 
                voice.name.includes('Google') || 
                voice.lang.includes('en-US')
            );
            return preferredVoices[0] || voices[0];
        }
        
        // Initialize voices
        if (speechSupport.synthesis) {
            synth.onvoiceschanged = loadVoices;
            loadVoices();
        } else {
            readAloudBtn.classList.add('hidden');
        }
        
        // Speak text
        function speak(text, interrupt = true) {
            if (!speechSupport.synthesis) return;
            
            if (interrupt && currentUtterance) {
                synth.cancel();
            }
            
            const utterance = new SpeechSynthesisUtterance(text);
            utterance.voice = loadVoices();
            utterance.rate = 0.9;
            utterance.pitch = 1;
            utterance.volume = 1;
            
            utterance.onend = function() {
                currentUtterance = null;
                readAloudBtn.innerHTML = '<i class="fas fa-volume-up"></i> Read Aloud';
            };
            
            currentUtterance = utterance;
            readAloudBtn.innerHTML = '<i class="fas fa-stop"></i> Stop';
            synth.speak(utterance);
        }
        
        // Speech recognition setup
        let recognition;
        if (speechSupport.recognition) {
            const SpeechRecognition = window.SpeechRecognition || window.webkitSpeechRecognition;
            recognition = new SpeechRecognition();
            recognition.continuous = false;
            recognition.interimResults = false;
            recognition.maxAlternatives = 1;
            
            recognition.onresult = function(event) {
                const transcript = event.results[0][0].transcript;
                aiInput.value = transcript;
                processUserInput(transcript);
                voiceBtn.innerHTML = '<i class="fas fa-microphone"></i>';
            };
            
            recognition.onerror = function(event) {
                addMessage("Sorry, I didn't catch that. Please try again.", 'ai');
                voiceBtn.innerHTML = '<i class="fas fa-microphone"></i>';
            };
        } else {
            voiceBtn.classList.add('hidden');
        }
        
        // Add message to chat
        function addMessage(text, sender) {
            const messageDiv = document.createElement('div');
            messageDiv.className = `flex mb-4 ${sender === 'user' ? 'justify-end' : ''}`;
            
            if(sender === 'ai') {
                messageDiv.innerHTML = `
                    <div class="w-8 h-8 rounded-full bg-blue-500 flex items-center justify-center text-white mr-3">
                        <i class="fas fa-robot"></i>
                    </div>
                    <div class="flex-1 bg-blue-50 rounded-lg p-3">
                        <p class="text-sm">${text}</p>
                        <p class="text-xs text-gray-500 mt-1">Just now</p>
                    </div>
                `;
            } else {
                messageDiv.innerHTML = `
                    <div class="flex-1 bg-gray-100 rounded-lg p-3">
                        <p class="text-sm">${text}</p>
                        <p class="text-xs text-gray-500 mt-1">Just now</p>
                    </div>
                    <div class="w-8 h-8 rounded-full bg-gray-300 flex items-center justify-center text-white ml-3">
                        <i class="fas fa-user"></i>
                    </div>
                `;
            }
            
            chatContainer.appendChild(messageDiv);
            chatContainer.scrollTop = chatContainer.scrollHeight;
        }
        
        // Show typing indicator
        function showTypingIndicator() {
            typingIndicator.classList.remove('hidden');
            chatContainer.scrollTop = chatContainer.scrollHeight;
        }
        
        // Hide typing indicator
        function hideTypingIndicator() {
            typingIndicator.classList.add('hidden');
        }
        
        // Process user input
        function processUserInput(message) {
            if(!message.trim()) return;
            
            addMessage(message, 'user');
            aiInput.value = '';
            showTypingIndicator();
            
            // Simulate AI processing delay
            setTimeout(() => {
                hideTypingIndicator();
                const response = generateAIResponse(message);
                addMessage(response.text, 'ai');
                
                if(response.speak) {
                    speak(response.text);
                }
            }, 1500);
        }
        
        // Generate AI response
        function generateAIResponse(userMessage) {
            const lowerMsg = userMessage.toLowerCase();
            
            // Health analysis responses
            if(lowerMsg.includes('headache') || lowerMsg.includes('migraine')) {
                return {
                    text: "Headaches can have various causes. Common remedies include:�n�n" �
                          "��� Hydration (drink water)�n" �
                          "��� Rest in a quiet, dark room�n" �
                          "��� Over-the-counter pain relievers like acetaminophen�n�n" �
                          "If headaches are severe, persistent, or accompanied by other symptoms like vision changes or nausea, please consult a doctor immediately.",
                    speak: true
                };
            }
            else if(lowerMsg.includes('blood pressure') || lowerMsg.includes('bp')) {
                return {
                    text: "Normal blood pressure is typically around 120/80 mmHg. You can monitor your blood pressure through:�n�n" �
                          "1. Regular checks with a home monitor�n" �
                          "2. Maintaining a healthy diet low in sodium�n" �
                          "3. Regular exercise�n" �
                          "4. Stress management techniques�n�n" �
                          "Would you like me to show you how to log your blood pressure readings?",
                    speak: true
                };
            }
            else if(lowerMsg.includes('cold') || lowerMsg.includes('flu')) {
                return {
                    text: "For cold or flu symptoms, I recommend:�n�n" �
                          "��� Rest and hydration�n" �
       
